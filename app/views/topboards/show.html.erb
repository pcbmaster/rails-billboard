<% rank = 1 %>
<table class="ui single line table">
  <thead>
    <tr>
      <th>Song</th>
      <th>Rank</th>
    </tr>
  </thead>
  <tbody>
    <% @topboard.songs.each do |song| %>
      <tr>
        <td>
          <h3 class="ui header">
            <div class="content">
              <%= song.name %>
            <br>
            <div class="sub header">
              <%= song.artist.name %>
            </div>
          </h3>
        </td>
        <td>
          <h2 class="ui header"><%= rank %></h2>
        </td>
      </tr>
      <% rank += 1 %>
    <% end %>
  </tbody>
</table>
